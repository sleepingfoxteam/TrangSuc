@model TrangSucSolution.Models.PhieuDatHang

@{
    ViewBag.Title = "Create";
}

@{ 
    int tongtien = ViewBag.tongtien;
}

<h2>Create</h2>


<div class="row">
    <div class="col-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>PhieuDatHang</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.SoPhieu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoPhieu, new { htmlAttributes = new { @class = "form-control" ,@Value = ViewBag.idphieu, @readonly="" } })
                        @Html.ValidationMessageFor(model => model.SoPhieu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TongGiaTri, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TongGiaTri, new { htmlAttributes = new { @class = "form-control" , @Value = tongtien} })
                        @Html.ValidationMessageFor(model => model.TongGiaTri, "", new { @class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayLap, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" , @Type="date", @Value = ViewBag.ngaylap} })
                        @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NguoiLap, "NguoiLap", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("NguoiLap", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NguoiLap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <button class="btn btn-primary" id="btn-addtrangsuc">Them San Pham Vao Trong Phieu</button>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

