@model TrangSucSolution.Models.TrangSuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

@{ 
    int giathitruong = (int)(ViewBag.giathitruong / 10);
}

<!--Hình ảnh sản phẩm-->
<div class="row">
    <div class="col-lg-5 col-md-5">
        <div style="width:100%;height:400px;">
            <img style="width:250px;object-fit:contain;transform:translate(25%,25%)" src="../../Image/@Html.DisplayFor(model => model.HinhAnh)" />
        </div>
    </div>
    <div class="col-lg-7 col-md-7">
        <div class="row">
            <div class="col-lg-10 col-md-10" style="margin-top: 40px;">
                <h3>
                    @Html.DisplayFor(model => model.TenTrangSuc)
                </h3>
            </div>
            <div class="col-lg-12 col-md-12">
                <h5>
                    MS:
                    @Html.DisplayFor(model => model.ID)
                </h5>

            </div>
            @{ 
                int giathanh = (int)(giathitruong * Model.KhoiLuongTinh + Model.GiaCong + Model.GiaHat * Model.SoHat);
            }
            <div class="col-lg-12 col-md-12">
                <h3 style="color: orangered;">
                    @giathanh.ToString("##,#") vnđ
                </h3>

            </div>
            <div class="col-lg-9 col-md-9">
                <h5 style="font-weight:600;">
                    * Giá sản phẩm thay đổi tùy thuộc vào trọng lượng vàng và trọng lượng đá. Vui lòng gọi
                    SĐT CỦA TUI để được hỗ trợ.
                </h5>
            </div>
            <div class="col-lg-12 col-md-12" style="margin-top: 20px;">
                <button type="button" class="btn-primary btn-cart" data-id="@Model.ID">Them Vao Gio Hang</button>
                <button class="btn btn-default" style="background-color:black;color:white;font-size:20px;
padding:10px 62px;">
                    MUA HÀNG
                </button>
            </div>
        </div>
    </div>
</div>

<!--THÔNG SỐ SẢN PHẨM-->
<div class="row" style="margin-top: 120px;">
    <div class="col-lg-8 col-md-8">
        <h2 style="font-weight:400;">
            Thông số
        </h2>
        <hr />
    </div>
    <div class="col-lg-8 col-md-8">
        <div class="row">
            <div class="col-lg-6 col-md-6" style="font-weight: 600;">
                Thương hiệu
            </div>
            <div class="col-lg-6 col-md-6">
                PNJ
            </div>
        </div>
        <hr />
    </div>
    <div class="col-lg-8 col-md-8">
        <div class="row">
            <div class="col-lg-6 col-md-6" style="font-weight: 600;">
                Số hạt
            </div>
            <div class="col-lg-6 col-md-6">
                1
            </div>
        </div>
        <hr />
    </div>
    <div class="col-lg-8 col-md-8">
        <div class="row">
            <div class="col-lg-6 col-md-6" style="font-weight: 600;">
                Khối lượng tịnh
            </div>
            <div class="col-lg-6 col-md-6">
                @Html.DisplayFor(model => model.KhoiLuongTinh)
            </div>
        </div>
    </div>
</div>