@model IEnumerable<TrangSucSolution.Models.TrangSuc>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<h2>GioHang</h2>
<div class="container row">
    <div class="col-lg-6">
        <h3 class="mb-3">Thong tin nguoi mua</h3>
        <form id="thongtinkhachhang">
            <div class="form-check form-check-inline">
                <input id="sex-nam" class="form-check-input" value="nam" type="radio" name="sex" checked/>
                <label for="sex-nam" class="form-check-label">Nam</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="sex-nu" class="form-check-input" value="nu" type="radio" name="sex"/>
                <label for="sex-nu" class="form-check-label">Nu</label>
            </div>
            <div class="form-group">
                <label for="hoten">Ho Ten</label>
                <input id="hoten" name="hoten" class="form-control" type="text" placeholder="Ho Ten" />
            </div>
            <div class="form-group">
                <label for="sodienthoai">So Dien Thoai</label>
                <input id="sodienthoai" name="sodienthoai" class="form-control" type="text" placeholder="So Dien Thoai" />
            </div>
            <div class="form-group">
                <label for="diachi">Ho Ten</label>
                <input id="diachi" name="diachi" class="form-control" type="text" placeholder="Dia Chi" />
            </div>
            <span class="text-bold">Hình thức thanh toán</span>
            <p>Thanh toán tiền mặt khi nhân hàng (COD).<br />
               Chúng tôi cam đoan về chất lượng của sản phẩm. Mong quý khách kiểm tra thật kỹ trước khi thanh toán,
                hàng sẽ không được hoàn trả lại sau khi thanh toán.
            </p>
            <span class="mt-3">Quý khách có thể để lại lời nhắn ở bên dưới</span>
            <textarea cols="60" placeholder="message" class="form-control"></textarea>
        </form>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-5">
        <h3 class="mb-3">Trang Suc Trong Gio Hang</h3>
        <ul class="list-giohang">
            @{
                foreach (var item in Model)
                {
                    <li class="item">
                        <div class="item-img">
                            <img src="../../Image/@item.HinhAnh" class="mr-3" alt="@item.TenTrangSuc">
                        </div>
                        <div class="item-info">
                            <h5 class="mt-0 mb-3 text-bold">@item.TenTrangSuc</h5>
                            So Luong: <span id="soluong">1</span><br />
                            Khoi Luong Tinh: <span id="khoiluongtinh">@item.KhoiLuongTinh</span>
                        </div>
                    </li>
                    <hr />
                }
            }
        </ul>
        <h3 class="my-3">Tong Gia tri: </h3>
        <button class="btn btn-primary mr-5 mt-5" id="btn-dathang" style="float:right;">Dat Hang</button>
    </div>
</div>


