</div>
<!--BANNER CAROUSEL-->
<div class="row" style="margin-top:15px;">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="../../Image/PNJ-Motherday-1972x640.jpg" alt="Los Angeles">
                </div>

                <div class="item">
                    <img src="../../Image/n-Homebanner-1972x640_3gia-9s_.jpg" alt="Chicago">
                </div>

                <div class="item">
                    <img src="../../Image/home-banner-bi-an-kim-cuong-desktop_1972x640.jpg" alt="New York">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<hr />
<!--carousel SẢN PHẨM MỚI -->
<div class="row">
    <h3 class="text-center" , style="margin-bottom: 20px;">SẢN PHẨM MỚI</h3>
    <div class="col-lg-12 col-md-12">
        <div class="owl-carousel owl-theme">
            @{
                int count = 0;
                foreach (var item in Model)
                {
                    int giadang =(int)(item.KhoiLuongTinh * giathitruong / 10 + item.GiaCong + item.GiaHat * item.SoHat);
                    if (count < 12)
                    {
                        <div class="item item-size">
                            <img src="../../Image/@Html.DisplayFor(modelItem => item.HinhAnh)">
                            <h4 class="text-center">
                                @Html.ActionLink(item.TenTrangSuc, "Details", new { id = item.ID }, new { @class = "aa-link" })
                            </h4>
                            <h5 class="text-center" style="color: orangered;">
                                @giadang.ToString("#,##0")
                            </h5>
                            <button type="button" class="btn-primary btn-cart" data-id="@item.ID">Them Vao Gio Hang</button>
                        </div>
                    }
                    count++;
                }
                count = 0;
            }
        </div>
    </div>
</div>

<hr />

