            var owl = $('.owl-carousel');
            owl.owlCarousel({
                items: 4,
                loop: true,
                margin: 10,
                autoplay: true,
                autoplayTimeout: 2000,
                autoplayHoverPause: true
            });
        })
    </script>
    <script>
        $(document).ready(function () {
            $('a').click(function () {
                $('a').removeClass("active");
                $(this).addClass("active");
            });
        });
    </script>
    <script>
        $(function () {
            $('.slide').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
            });
        });
    </script>
